<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomepageActivity"
    android:background="@color/background"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomParent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/homeScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/allSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="For you" />

                        <Button
                            android:id="@+id/hindiSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Hindi" />

                        <Button
                            android:id="@+id/englishSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="English" />

                        <Button
                            android:id="@+id/bengaliSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Bengali" />

                        <Button
                            android:id="@+id/punjabiSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Punjabi" />

                        <Button
                            android:id="@+id/bhojpuriSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Bhojpuri" />

                        <Button
                            android:id="@+id/urduSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Urdu" />

                        <Button
                            android:id="@+id/gujratiSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Gujarati" />

                        <Button
                            android:id="@+id/odiaSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Odia" />

                        <Button
                            android:id="@+id/rajasthaniSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Rajasthani" />

                        <Button
                            android:id="@+id/haryanviSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Haryanvi" />

                        <Button
                            android:id="@+id/malayalamSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Malayalam" />

                        <Button
                            android:id="@+id/marathiSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Marathi" />

                        <Button
                            android:id="@+id/tamilSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Tamil" />

                        <Button
                            android:id="@+id/teleguSong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="@color/gray"
                            android:fontFamily="@font/poppins"
                            android:text="Telugu" />

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Songs"
                    android:textColor="@color/text_color1"
                    android:textSize="30sp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songsRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Albums"
                    android:textColor="@color/text_color1"
                    android:textSize="30sp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/albumRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Trending Now"
                    android:textColor="@color/text_color1"
                    android:textSize="30sp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/trendingAlbumRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_extrabold"
                    android:text="Playlists"
                    android:textColor="@color/text_color1"
                    android:textSize="30sp"

                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/playlistRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/accent3"
                    android:gravity="center_vertical"
                    android:minHeight="60dp">

                    <EditText
                        android:id="@+id/searchElementID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:hint="Search for a song"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:paddingHorizontal="20dp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchItemRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/bottomParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbar"
        android:background="@color/accent1"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:visibility="gone">


        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/selectedImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/col2"

                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnAreas"
            android:layout_toEndOf="@id/card"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/selectedMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/card"
                android:ellipsize="marquee"
                android:fontFamily="@font/poppins_semibold"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:paddingBottom="3dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Music Name Here"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/selectedArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fontFamily="@font/poppins"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Artist Name"
                android:textColor="#393939"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            >

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/play"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/pauseButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/pause"
                android:visibility="gone"
                app:tint="@color/black" />

            <!--                <ImageView-->
            <!--                    android:id="@+id/nextButton"-->
            <!--                    android:layout_width="40dp"-->
            <!--                    android:layout_height="40dp"-->
            <!--                    android:layout_gravity="center"-->
            <!--                    android:src="@drawable/next"-->

            <!--                    />-->

        </LinearLayout>


    </RelativeLayout>

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/bottomBar"
        android:progressDrawable="@drawable/seekbar_main_drawable"
        android:splitTrack="false"
        android:thumb="@drawable/seekbar_thumb" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_bar_icon_size"
            android:layout_weight="1"
            app:tint="@color/text_color1"
            android:padding="10dp"
            android:src="@drawable/home_button" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_bar_icon_size"
            android:layout_weight="1"
            android:padding="10dp"
            app:tint="@color/text_color1"
            android:src="@drawable/search_button" />

        <ImageView
            android:id="@+id/favButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_bar_icon_size"
            android:layout_weight="1"
            app:tint="@color/text_color1"
            android:padding="10dp"
            android:src="@drawable/fav_button" />

        <ImageView
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_bar_icon_size"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/profile_button"
            app:tint="@color/text_color1" />

    </LinearLayout>

</RelativeLayout>