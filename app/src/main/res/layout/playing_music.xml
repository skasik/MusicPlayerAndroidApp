<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:minHeight="900dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/dismiss"
            android:layout_gravity="start"
            app:tint="#C3C3C3"
            android:id="@+id/dismiss"

            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/upcomingSong"
            android:layout_marginTop="10dp"
            android:src="@drawable/currently_playing"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="Upcoming Songs"
            app:tint="#C3C3C3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/songNameBS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/poppins_extrabold"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Song Name"
        android:textAlignment="center"
        android:textColor="@color/text_color1"
        android:textSize="30sp"

        />

    <TextView
        android:id="@+id/artistNameBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/poppins"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="180dp"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Artist Name"
        android:textColor="@color/text_color2"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/songImage"
                android:layout_width="300dp"
                android:layout_height="300dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <SeekBar
            android:id="@+id/seekPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_drawable"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textColor="@color/text_color1"
                android:text="00:00" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_color1"
                android:paddingEnd="10dp"
                android:text="05:00" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <ImageView
                android:id="@+id/previousBTN"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/previous_button"
                app:tint="@color/text_color1" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/play"
                android:visibility="gone"

                />

            <ImageView
                android:id="@+id/pauseButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/pause"
                android:visibility="gone" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/playPauseBtn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/text_color1"
                app:tint="@color/text_color1"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_colorFilter="@color/text_color1"
                app:lottie_rawRes="@raw/play_btn_anim"
                app:lottie_speed="2" />

            <ImageView
                android:id="@+id/nextButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/next"

                app:tint="@color/text_color1" />


        </LinearLayout>

    </LinearLayout>
